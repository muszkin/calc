{% extends 'AppBundle::layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}
{% block body %}
    {% if settings is not null %}
    <div class="container-fluid">
        <div class="row" id="info-row">
            <p>{{ 'productlist.info' | trans }}</p>
            <input type="hidden" value="{{ ids }}" id="products">
            <input type="hidden" value="{{ app_path('productadd') }}" id="url">
            <a href="#" id="attribute_yes" class="btn btn-danger">{{ 'yes' | trans }}</a>
            <a href="#" id="attribute_no" class="btn btn-info">{{ 'no' | trans }}</a>
        </div>
    </div>
        <div class="container-fluid">
            <div class="row top-buffer" id="result">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-12 text-center" id="progressbar-progress">
                        </div>
                    </div>
                    <div class="row">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped active" id="progressbar-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 text-justify" id="errors"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid" id="finish">
            <div class="row top-buffer text-center">
                {{ 'progressbar.finish.info'|trans }}
            </div>
            <div class="row top-buffer">
                <div class="center-block">
                    <a href="#" class="btn btn-info btn-lg center-block" onclick="window.shopAppInstance.closeIframeModal()">{{ 'progressbar.finish'|trans }}</a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container-fluid">
            <div class="row">
                <p>{{ 'productlist.no_settings' | trans }}</p>
                <a href="{{ app_path('index') }}" class="btn btn-primary">{{ 'go' | trans}}</a>
            </div>
        </div>
    {% endif %}
{% endblock %}

